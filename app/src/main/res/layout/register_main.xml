<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="회원가입"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="40dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:layout_marginBottom="34dp"
                    android:layout_marginLeft="8dp"
                    android:text="아이디"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editTextId_Reg"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="8dp"
                    android:backgroundTint="#000000"
                    android:ems="10"
                    android:layout_gravity="bottom"
                    android:hint="@string/editId_hint"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:textColorHint="#8D000000" />

                <Button
                    android:id="@+id/btnCheckId_Reg"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:layout_gravity="right"
                    android:backgroundTint="#0E5BDF"
                    android:text="중복확인"
                    android:textColor="#ffffff"
                    android:padding="1dp"
                    android:textSize="12sp"/>

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:layout_marginBottom="34dp"
                    android:layout_marginLeft="8dp"
                    android:text="비밀번호"
                    android:textColor="#000000"
                    android:textSize="18sp"  />

                <EditText
                    android:id="@+id/editTextPass_Reg"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="8dp"
                    android:backgroundTint="#000000"
                    android:ems="10"
                    android:layout_gravity="bottom"
                    android:hint="@string/editPass_hint"
                    android:inputType="textPassword"
                    android:textColor="#000000"
                    android:textColorHint="#8D000000" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:layout_marginBottom="34dp"
                    android:layout_marginLeft="8dp"
                    android:text="비밀번호 확인"
                    android:textColor="#000000"
                    android:textSize="18sp" />


                <EditText
                    android:id="@+id/editTextRePass_Reg"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="8dp"
                    android:backgroundTint="#000000"
                    android:ems="10"
                    android:layout_gravity="bottom"
                    android:hint="@string/editPass_hint"
                    android:inputType="textPassword"
                    android:textColor="#000000"
                    android:textColorHint="#8D000000" />

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:layout_marginBottom="34dp"
                    android:layout_marginLeft="8dp"
                    android:text="닉네임"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editTextNick_Reg"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="8dp"
                    android:backgroundTint="#000000"
                    android:ems="10"
                    android:layout_gravity="bottom"
                    android:hint="@string/editNick_hint"
                    android:inputType="text"
                    android:maxLength="20"
                    android:textColor="#000000"
                    android:textColorHint="#8D000000" />

                <Button
                    android:id="@+id/btnCheckNick_Reg"
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:layout_gravity="right"
                    android:backgroundTint="#0E5BDF"
                    android:text="중복확인"
                    android:textColor="#ffffff"
                    android:padding="1dp"
                    android:textSize="12sp"/>
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:layout_marginBottom="34dp"
                    android:layout_marginLeft="8dp"
                    android:text="휴대폰"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editTextPhone_Reg"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="8dp"
                    android:backgroundTint="#000000"
                    android:ems="10"
                    android:layout_gravity="bottom"
                    android:hint="@string/editPhone_hint"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:textColorHint="#8D000000" />

            </FrameLayout>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnRegister_Reg"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="45dp"
        android:backgroundTint="#0E5BDF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="회원가입하기" />


</androidx.constraintlayout.widget.ConstraintLayout>